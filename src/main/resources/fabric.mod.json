{
  "schemaVersion": 1,
  "id": "sakuralib",
  "version": "${version}",

  "name": "Sakura Lib",
  "description": "A library to simplify Datageneration based on top of owo-lib and ARRP",
  "authors": [
    "NoaSakurajin"
  ],
  "contact": {
    "repo": "https://github.com/noah1510/sakura-lib"
  },

  "license": "LGPL-3.0",
  "icon": "assets/sakuralib/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "de.sakurajin.sakuralib.SakuraLib"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "owo-lib": "*",
    "advanced_runtime_resource_pack": ">=0.8.0"
  },
  "suggests": {
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "update_checker": true
    }
  }
}
